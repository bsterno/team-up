<div class="row">
  <div class="small-10 columns small-centered">

    <ul class="pricing-table">
      <li class="title">
        <div class"google-maps small-12 columns">
          <iframe
           width="600"
           height="450"
           frameborder="0" style="border:0"
           src="https://www.google.com/maps/embed/v1/place?key=<%= ENV["GOOGLE_KEY"] %>
             &q=<%= @address %>
             &attribution_source=Google+Maps+Embed+API
             &attribution_ios_deep_link_id=comgooglemaps://?daddr=<%= @address %>">
          </iframe>
        </div>
      </li>
      <li class="price"><%= @game.sport.name %></li>
      <li class="bullet-item"><%= @address %></li>
      <li class="bullet-item"><%= @game.start_date.strftime("%A, %B %d") %><%= @game.start_date.strftime("%l:%M %p")%></li>
      <li class="bullet-item"><strong>Additional Information:</strong> <%= @game.description %></li>
      <li class="bullet-item">
        <table>
          <thead>
            <tr>
              <th>Players</th>
              <th>Your Status</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <% if @players.count == @game.max_players %>
              <td>FULL</td>
              <% else %>
              <td><%= @players.count %>/<%= @game.max_players %></td>
              <% end %>

              <% if @player.nil? %>
                <td>Not Attending</td>
                <% if @players.count == @game.max_players %>
                  <% else %>
                <%= button_to "Join Game", game_players_path(@game), method: :post, class: "tiny button expand" %>
                  <% end %>
              <% else %>
                <td>Attending</td>
                <%= button_to "Leave Game", game_player_path(@game, @player), method: :delete, class: "tiny button expand" %>
              <% end %>
            </tr>
          </tbody>
        </table>
      </li>

      <li class="bullet-item">
        <table>
          <thead>
            <tr>
              <th>Attending</th>
            </tr>
          </thead>
          <% @players.each do |player| %>
          <tbody>
            <tr>
              <td><%= player.user.email %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </li>

      <%= link_to "Back to Games", games_path %>

      <% if @game.user == current_user %>
        <%= button_to "Delete Game", game_path, method: :delete, data: {confirm: "Are you sure you want to delete this game?"} %>
      <% end %>
    </ul>

  </div>
</div>

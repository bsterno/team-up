<h1>
  <%= @game.name %>
</h1>

<h3>
  <strong>Sport:</strong> <%= @game.sport %><br>
  <strong>Location:</strong> <%= @game.street_address %>, <%= @game.city %>
</h3>

<table>
    <tr>
      <th>Start Date/Time</th>
      <th>Max Players</th>
      <th>Player Status</th>
    </tr>

    <tr>
      <td><%= @game.start_date %></td>
      <td><%= @game.max_players %></td>
      <% if @player.nil? %>
        <td><%= button_to "Join Game", game_players_path(@game), method: :post %></td>
      <% else %>
        <td><%= "Currently Attending" %></td>
      <% end %>
    </tr>
</table>

  <table>
    <tr>
      <th>Players</th>
    </tr>
    <% @players.each do |player| %>
    <tr>
      <td><%= player.user.email %></td>
    </tr>
    <% end %>
  </table>

<%= link_to "Back to Games", games_path %>

<% if @game.user == current_user %>
  <%= button_to "Delete Game", game_path, method: :delete, data: {confirm: "Are you sure you want to delete this game?"} %>
<% end %>

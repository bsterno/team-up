<div id="featured">

<div class="row">
  <div class="small-10 columns small-centered">
    <div class="create-row medium-9 small-12 small-centered columns">
      <h1 id="index-header">
        <% if current_user.image == nil %>
          <%= image_tag("default.png") %>
        <% else %>
          <%= image_tag(current_user.image) %>
        <% end %>
        My Games</h1>
      <%= link_to new_game_path, class:"create tiny button expand" do %>
        <i class="fa fa-plus"></i> New Game
      <% end %>
    </div>

    <table id="table_id" class="display">
      <thead>
        <tr>
          <th>Sport</th>
          <th>Address</th>
          <th>Date</th>
          <th>Time</th>
          <th>Additional info</th>
          <th>Players</th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
        <tr>
          <td><%= game.game.sport.name %></td>
          <td><%= link_to game.game.street_address, game_path(game.game) %></td>
          <td><%= game.game.start_date %></td>
          <td><%= game.game.start_date.strftime("%l:%M%p") %></td>
            <% if game.game.description.empty? %>
              <td>N/A</td>
            <% else %>
              <td><%= game.game.description %></td>
            <% end %>
          </td>
            <% if game.game.players.count == game.game.max_players %>
          <td>FULL</td>
            <% else %>
          <td><%= game.game.players.count %>/<%= game.game.max_players %></td>
            <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>

</div>

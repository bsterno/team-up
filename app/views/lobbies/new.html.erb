<div class="row">
  <%- if @lobby.errors.present? -%>
    <div class="large-12 alert-box alert" data-alert>
      <ul>
        <%- @lobby.errors.full_messages.each do |error| -%>
          <li><%= error %></li>
        <%- end -%>
      </ul>
    </div>
  <%- end -%>

<h1>Create a Lobby</h1>
<%= form_for @lobby do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :game %>
  <%= f.text_field :game %>

  <%= f.label :max_players %>
  <%= f.number_field :max_players %>

  <%= f.submit "Create Lobby" %>

<% end %>
